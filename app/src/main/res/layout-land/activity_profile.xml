<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="15dp"
        android:text="Woonplaats"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintEnd_toStartOf="@+id/ProfileWoonplaats"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView14" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="108dp"
        android:text="Type Auto"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileButton"
        app:layout_constraintEnd_toStartOf="@+id/ProfileCar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginEnd="77dp"
        android:layout_marginBottom="7dp"
        android:text="Leeftijd"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintEnd_toStartOf="@+id/ProfileLeeftijd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="161dp"
        android:layout_marginBottom="10dp"
        android:text="Bio"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileBio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ProfileNaam"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="8dp"
        android:text="Naam"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/ProfileNaam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProfileNaam"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileLeeftijd"
        app:layout_constraintEnd_toStartOf="@+id/textView15"
        app:layout_constraintStart_toEndOf="@+id/textView11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ProfileCar"
        android:layout_width="200dp"
        android:layout_height="36dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileUsername"
        app:layout_constraintEnd_toStartOf="@+id/ProfileBio"
        app:layout_constraintStart_toEndOf="@+id/textView13"
        app:layout_constraintTop_toBottomOf="@+id/ProfileWoonplaats" />

    <TextView
        android:id="@+id/ProfileWoonplaats"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="19dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileCar"
        app:layout_constraintEnd_toStartOf="@+id/ProfileBio"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/ProfileLeeftijd" />

    <TextView
        android:id="@+id/ProfileLeeftijd"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintBottom_toTopOf="@+id/ProfileWoonplaats"
        app:layout_constraintEnd_toStartOf="@+id/ProfileBio"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/ProfileNaam" />

    <TextView
        android:id="@+id/ProfileUsername"
        android:layout_width="303dp"
        android:layout_height="40dp"
        android:layout_marginEnd="180dp"
        android:layout_marginBottom="37dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ProfileButton"
        app:layout_constraintTop_toBottomOf="@+id/ProfileCar" />

    <TextView
        android:id="@+id/ProfileBio"
        android:layout_width="311dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="108dp"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toTopOf="@+id/ProfileUsername"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ProfileWoonplaats"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <Button
        android:id="@+id/ProfileButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="29dp"
        android:text="Ga terug"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ProfileUsername"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>